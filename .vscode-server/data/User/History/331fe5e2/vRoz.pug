extends ../nav

block content
  h1= title
  if error
    include ./blog-error
  else if message
    include ./blog-message
  each blog, idx in blogs
    .card
      .card-body
        h4.card-title= blog.blogtitle
        p.card-text= blog.blogtext
        ul.nav.nav-pills.justify-content-end
          li.nav-item 
            a.nav-link(href="/edit/"+blog._id)
              i.bi.bi-pencil-square 
              span Edit
          li.nav-item
            a.nav-link(href="/delete/"+blog._id)
              i.bi.bi-trash3
              span Delete
