extends layout

block content
  include ./partials/nav
  #banner.page-header
    .row
      .col-lg-6
        h1= pageHeader.title
         small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .row.list-group
        each blog in blogs
          .col-xs-12.list-group-item
            h4 
              a(href="/blog")= blog.blogtitle
              small &nbsp;
                +outputText(blog.blogtext)
              span.badge.pull-right.badge-default= blog.createdDate
    .col-xs-12.col-sm-4 
      p.lead= sidebar
